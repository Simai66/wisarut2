rules_version = '2';
service firebase.storage {
  match /b/{bucket}/o {
    // Photos folder
    match /photos/{photoId}/{allPaths=**} {
      // Anyone can read
      allow read: if true;
      
      // Only admin can write
      allow write: if request.auth != null && 
                   request.auth.token.email == 'YOUR_ADMIN_EMAIL@gmail.com';
    }
  }
}
