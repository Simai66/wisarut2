# Firebase Configuration
VITE_FIREBASE_API_KEY=your_api_key_here
VITE_FIREBASE_AUTH_DOMAIN=your_project_id.firebaseapp.com
VITE_FIREBASE_PROJECT_ID=your_project_id
VITE_FIREBASE_STORAGE_BUCKET=your_project_id.appspot.com
VITE_FIREBASE_MESSAGING_SENDER_ID=your_sender_id
VITE_FIREBASE_APP_ID=your_app_id

# Optional: content persistence mode
# - firestore (default): reads/writes About/Contact from Firestore collection `siteContent`
# - local: uses browser localStorage (fast, works without Firestore; per-browser)
VITE_CONTENT_SOURCE=firestore

# Admin access (email allowlist)
# Prefer VITE_ADMIN_EMAILS (comma-separated). VITE_ADMIN_EMAIL is legacy.
VITE_ADMIN_EMAILS=admin1@example.com,admin2@example.com
VITE_ADMIN_EMAIL=admin1@example.com

# ImgBB upload
VITE_IMGBB_API_KEY=your_imgbb_api_key_here
# Optional: use your own Cloudflare Worker proxy URL
VITE_IMGBB_PROXY_URL=https://imgbb-proxy.YOUR_USERNAME.workers.dev
